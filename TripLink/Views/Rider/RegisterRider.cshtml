@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Registration";
}
<script type="text/javascript">
    $(document).ready(function () {

        $("#txtDOB").datepicker({
            autoclose: true,
            todayHighlight: true,
        }).datepicker('update', new Date());

    });
</script>
@*<div class="text-center">
    <h1>Registration page</h1>
</div>*@
<div class="container">
    <div class="row justify-content-md-center text-center">
        <div class="col-md-8">
            <div class="content-holder">
                <h2>Register here</h2>
                <ul class="list-inline mt-30">
                    <li class="list-inline-item"><a class="btn btn-main" href="#">Rider Registeration</a></li>
                    @*<li class="list-inline-item">
                        @Html.ActionLink("Rider Registeration","#","#", null, new{@class="btn btn-main", disabled="disabled"})
                    </li>*@
                    <li class="list-inline-item">
                        @Html.ActionLink("Driver Registeration","Register","Driver", new{isForRider = false}, new{@class="btn btn-secondary"})
                    </li>
                    @*<li class="list-inline-item"><a class="btn btn-secondary" href="category.html">Browser Listing</a></li>*@
                </ul>
            </div>
        </div>
    </div>
</div>
<section class="login py-4 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-7 align-item-center">
                <div class="border">
                    <h3 class="bg-gray p-4">Register Rider</h3>
                    <form action="#">
                        <fieldset class="p-4">
                            <div class="row">
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">First Name</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtFName" placeholder="First Name">
                                </div>
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">Last Name</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtLName" placeholder="Last Name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">Contact Number</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtNumber" placeholder="Contact Number">
                                </div>
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">Alternate Number</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtAltNumber" placeholder="Alternate Number">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">Email</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtEmail" placeholder="Email">
                                </div>
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">Date of Birth</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtDOB" placeholder="DOB">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">Password</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtPassword" placeholder="Password">
                                </div>
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">Confirm Password</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtConfirmPassword" placeholder="Password">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">City</label>
                                    <select class="w-100 form-control mt-lg-1 mt-md-2" id="drpCity">
                                        <option>--Select City--</option>
                                        <option value="1">Kitchener</option>
                                        <option value="2">Cambridge</option>
                                        <option value="4">Waterloo</option>
                                    </select>
                                </div>
                                <div class="form-group col-xl-6 col-lg-6 col-md-6">
                                    <label for="first-name">Postal Code</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtPostalCode" placeholder="Postal Code">
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-xl-12 col-lg-12 col-md-12">
                                    <label for="first-name">Address</label>
                                    <input type="text" class="form-control my-2 my-lg-0" id="txtAddress" placeholder="Address">
                                </div>
                            </div>
                            <div class="form-group col-xl-12 col-lg-12 col-md-12">
                                <button type="submit" class="btn btn-transparent float-right">Register</button>
                            </div>
                            @*<button type="submit" class="btn btn-primary font-weight-bold mt-3">Log in</button>
                            <a class="mt-3 d-inline-block text-primary" href="register.html">Register Now</a>*@
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>